<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <% form.label :name %>
    <%= form.text_field :name, id: :order_name, size: 40 ,placeholder: "Name" , class: "form-control"%>
  </div>

  <div class="mb-3">
    <% form.label :address %>
    <%= form.text_area :address,  id: :order_address, rows: 3, cols: 40,placeholder: :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <% form.label :email %>
    <%= form.text_field :email,  id: :order_email, size: 40,placeholder: :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Payment Mode : " %>
    <%= form.select :pay_type , Order.pay_types.keys, id: :order_pay_type, prompt: 'Select a payment method'%>
  </div>

  <div class="action">
    <%= form.submit 'Place Order' , class: "btn btn-secondary" %>
  </div>
<% end %>
