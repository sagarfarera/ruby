<% if notice %>
 <aside id= "notice"> <%= notice %></aside>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<!--Playful task Date and time -->
<div class="DateTime">
  <p>Date : <%= @time.day %> / <%= @time.month %> / <%= @time.year %> </p>
  <p>Time : <%= @time.hour %> : <%= @time.min %> </p>
</div>

<ul class= "catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
    <% cache product do %>
    <li>
      <div class="card mb-3" >
        <div class="row g-0">
          <div class="col-md-4">
          
          <img src=<%= product.image_url%> alt="" height=300 width=300/>
          </div>
          <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"> <%= product.title %></h5>
            <p class="card-text"> <%= sanitize(product.description) %></p>
            <!--Playtime task  number to currency function changes, note: testing task one not done -->
            <p class="card-text"><small class="text-muted"><%= number_to_currency(product.price, precision: 2 , unit: "â‚¹") %></small></p>
            <%= button_to 'Add to Cart', entities_path( product_id:product), class:"btn btn-secondary" %>
          </div>
        </div>
      </div>
      </div>
    </li>
    <% end %>
  <% end %>
 <% end %>
</ul>
