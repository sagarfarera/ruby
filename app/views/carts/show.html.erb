<p id="notice"><%= notice %></p>

<h2>Your Cart</h2>
<!-- Table formation -->
 <table class="table">
  <tbody>
  <% @cart.entities.each do |item| %>
  <tr>
    <td class= "quantity"> <%= item.quantity %></td>
    <td> <%= item.product.title %></td>
    <td class= "price"> <%= number_to_currency(item.price) %>
    <!-- Playtime task delection of entity from the cart -->
    <%= button_to "delete", {:controller => :entities,
      :action => 'destroy', :id => item.id }, :method => :delete %>
    </td>
  </tr>
  <% end %>
   </tbody>
  <tfoot>
    <tr>
      <th colspan= "2">Total:</th>
      <td class= "price"> <%= number_to_currency(@cart.total_price) %></td>
    </tr>
  </tfoot>
</table>
<%= button_to 'Empty', @cart, method: :delete, data: {confirm: 'Are you sure?'} %>

